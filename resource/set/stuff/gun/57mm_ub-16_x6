{from "57mm_ars-57"		; 6 x UB-16 launchers
	{filling "57mm_s-5" 96} ;96
	("fire rate" rpm(1200))
	("reload time" seconds(240))
	{burst
		{min 6}
		{short 12 0.75}			;// short burst shots on long distance, rand (+-)shots
		{long 36 1}				;// long burst shots on short distance, rand (+-)shots
		{rangeKoef 0.85}		;// rangeKoef * aimRange = max long burst distance
	}
}