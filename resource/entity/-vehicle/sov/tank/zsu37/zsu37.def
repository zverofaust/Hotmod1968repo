{game_entity
	(include "/properties/tank.ext")
	(include "/properties/selection/vehicle.inc"  scale(1.0))
	{collider "tank.light"}
	{props "spaag" "light" "diesel" "turret_rotator" "vision_lev02" "muzzle_50mm_57mm" "open_top" "detect_tank_medium" "aa"}
	{targetclass "tank_light"}
	{targetSelector "cannon_aa"}
	{patherId "t34"}
	{collider "tank.light"}
	
	{extender "enumerator"}
	
	{volume "body1"
		{tags "body"}
		{component "body"}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
	}
	{volume "turret1"
		{tags "turret"}
		{thickness 10}
		{component "turret"}
	}
	{volume "turret2"
		{tags "turret"}
		{thickness 10}
		{component "turret"}
	}
	{volume "turret3"
		{tags "turret"}
		{thickness 10}
		{component "turret"}
	}
	{volume "turret4"
		{tags "turret"}
		{thickness 10}
		{component "turret"}
	}
	{volume "turret5"
		{tags "turret"}
		{thickness 10}
		{component "turret"}
	}
	{volume "turret6"
		{tags "turret"}
		{thickness 10}
		{component "turret"}
	}
	{volume "turret7"
		{tags "turret"}
		{thickness 10}
		{component "turret"}
	}
	{volume "turret8"
		{tags "turret"}
		{thickness 10}
		{component "turret"}
	}
	{Volume "Fuel"
		{thickness 1}
	}
	{volume "engine"	
		{thickness 10}
	}
	
	{component "engine"	
		{RepairTime 10}
	}
	{component "turret"
		{RepairTime 20}
	}
	{component "gun"
		{RepairTime 15}
	}

	{boarder
		{anm "driver"
			{forward	{begin	"board_su76"}}
			{reverse 	{end	"board_su76" -1}}
		}
		{anm "charger"
			{forward	{begin	"board_su76"} {end "seat_armor"}}
			{reverse 	{end	"board_su76" -1}}
		}
		{anm "gunner"
			{forward	{begin	"board_su76"} {end "seat_driver_car"}}
			{reverse 	{end	"board_su76" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_su76"} {end "seat_armor"}}
			{reverse 	{end	"board_su76" -1}}
		}
	}

	(define "crew_human"
		{placer
			{place "%place"
				{group "crew"}
				{linkbone "%place"}
				{turnoff {sensor} {shadow}}
				{visor "main"}
			}
		}
		{boarder
			{door "%door1"}
			{door "%door2"}
			{link "%door1" "%place" {anm "%place"} {forward putoff} {reverse puton}}
			{link "%door2" "%place" {anm "%place"} {forward putoff} {reverse puton}}
		}
	)

	{placer
		{place "driver" {group "crew"} {visor "driver"}}
	}
	{boarder
		{door "emit1"}
		{door "emit2"}
		{link "emit1" "driver" {anm "driver"} {forward putoff} {reverse puton}}
		{link "emit2" "driver" {anm "driver"} {forward putoff} {reverse puton}}
		{link "emit1" "commander" {anm "commander"} {forward putoff} {reverse puton}}
		{link "emit2" "commander" {anm "commander"} {forward putoff} {reverse puton}}
	}

	("crew_human" place(gunner)	    door1(emit1) door2(emit2))
	("crew_human" place(charger)	door1(emit1) door2(emit2))

	{placer
		{place "commander" {group "crew"} {visor "main"}}
	}

	{extender "inventory"
		{box
			{item "bulletrus_37_auto ap" 150}		; 60 clips (5 rounds each)
			{item "bulletrus_37_auto he" 150}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "37mm_61k" filling "bulletrus_37_auto he" 5}        
			{gunner "gunner"}
			{charger "charger"}
			{foresight "foresight"}
			("hm68_abm_nostab_norange")
		}
	}
	
	{mass 10500}
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.4) len(0.5))
		("mobility_tank"
			speed(50)  ;---------Max speed when fully accelerated on road, km/h.
			reverse(9.5);---------Max speed in reverse on road, km/h. ;//7.5 historical + 2 due to terrain modifier
			traverse(36) ;-------Track traverse, per second, in degrees.
			weight(10.5) ;-------Weight in Tonnes.
			power(520) ;---------Engine Power, in hp.
			track(4.5) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(830) ;----------Fuel capacity in Litres.
			type(diesel) ;-------Fuel type. (diesel OR fuel)
			range(300) ;---------Range in km, off-road.
		)
	}

	{Extension "zsu37.mdl"}
	
	{bone "turret"
		{speed 0.015}
	}
    {bone "gun_rot"
		{speed 0.007}
    }
}
