{game_entity
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc" scale(1.2))
	(include "/properties/selection/vehicle.inc" scale(1.2))
	{props "heavy" "vision_lev05" "muzzle_122mm_128mm_sides" "diesel" "detect_tank_heavy"}
	{extension "is2m.mdl"}
	(include "is2m.ext")
	{targetclass "tank_heavy"}
	{targetSelector "tank_heavy"}
	{collider "tank.heavy"}

	{extender "enumerator"
		{digit_folder "ru1"}
	}

	("crew_4_human")

	;("gunner_visible")
	("crew_human" place(charger) door(emit1) door2(emit2) visor(back))

	{boarder
		{anm "left"
			{forward {begin "board_Kv-85"} {end "seat_m7_mgunner"}}
			{reverse {end "emit_tank_2_hold"}}
		}
		{anm "right"
			{forward {begin "board_Is-2"} {end "seat_m7_mgunner"}}
			{reverse {end "emit_tank_2_hold"}}
		}
		{anm "armor"
			{forward {begin "board_HighArmor"} {end "seat_armor"}}
			{reverse {end "emit_tank_2"}}
		}
		{anm "armor1"
			{forward {begin "board_HighArmor"} {end "seat_armor"}}
			{reverse {end "emit_body"}}
		}
	}

	{sensor
		{visor "back"
			{vision "tank_back"}
			{bone "foresight6"}
		}
	}

	("seat_human" place(seat1) bone(seat01) door(emit3) animation(armor1))
	("seat_human" place(seat2) bone(seat02) door(emit4) animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit5) animation(armor))
	("seat_human" place(seat4) bone(seat04) door(emit6) animation(armor1))

	{extender "shield" {on}}

	{extender "inventory"
		{weapon "mgun" {mask "mountable"}}
		{box
			{item "bulletrus_122_l48 aphebc" 9}		;28 rounds
			{item "bulletrus_122_l48 he" 18}
			{item "ammo mgun_rus dt" 3276}			;55 drums
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "122mm_d25" filling "bulletrus_122_l48 aphebc" 1}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic"
				zeroing(3.5)
				dispersion(0.20)
			)
		}
		{place "mgun2"
			{type "coaxial"}
			{weapon "dt" filling "ammo mgun_rus dt" 63}
			{foresight "foresight5"}
			{gunner "gunner"}
			{charger "commander"}
			("abm_mgun")
			{basic}
		}
		{place "mgun3"
			{type "rear"}
			{weapon "dt" filling "ammo mgun_rus dt" 63}
			{foresight "foresight6"}
			{gunner "charger"}
			{charger "charger"}
			("abm_mgun")
			{basic}
			{ai_in_manual}
		}
	}

	{mass 46000}
	{Chassis
		("tank_trace" fx("tracks_big") step(0.47) len(0.98))
		("mobility_tank"
			speed(37) ;----------Max speed when fully accelerated on road, km/h.
			reverse(11.7) ;---------Max speed in reverse on road, km/h.
			traverse(25) ;-------Track traverse, per second, in degrees.
			weight(46.0) ;-------Weight in Tonnes.
			power(520) ;---------Engine Power, in hp.
			track(4.0) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(520) ;----------Fuel capacity in Litres.
			type(diesel) ;-------Fuel type. (diesel OR fuel)
			range(120) ;---------Range in km, off-road.
		)
	}

	{bone "gun_rot"
		{limits -4 20}
		{speed2 3}
	}
	{bone "turret"
		{speed2 8}
	}
}