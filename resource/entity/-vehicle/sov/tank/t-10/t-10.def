{game_entity		;T-10 base
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc" scale(1.2))
	(include "/properties/selection/vehicle.inc" scale(1.2))
	(include "t-10.ext")
	{props "heavy" "vision_lev05" "muzzle_122mm_128mm_sides" "diesel" "detect_tank_heavy"}
	{targetclass "tank_heavy"}
	{targetSelector "tank_heavy"}
	{collider "tank.heavy"}

	{extender "enumerator"
		{digit_folder "cw"}
	}
	
	("crew_4_human")
	("gunner_visible")

	{boarder
		{anm "driver"
			{forward {begin "board_Is-2"} {end "seat_gunner_stand"}}
			{reverse {end "emit_tank_1_hold"}}
		}
		{anm "left"
			{forward {begin "board_Is-2"} {end "seat_commander_hatch"}}
			{reverse {end "emit_tank_1_hold"}}
		}
		{anm "right"
			{forward {begin "board_Is-2"} {end "seat_commander_hatch"}}
			{reverse {end "emit_tank_1_hold"}}
		}
		{anm "armor"
			{forward {begin "board_HighArmor"} {end "pose_seat_armor_1"}}
			{reverse {end "emit_tank_2"}}
		}
		{anm "armor1"
			{forward {begin "board_HighArmor"} {end "pose_seat_armor_1"}}
			{reverse {end "emit_body"}}
		}
	}
	
	{extender "inventory"
		{box
			{item "ammo bulletrus_122_l48 apds"	15}
			{item "ammo bulletrus_122_l48 he"	10}
			{item "ammo bulletrus_122_l48 heat"	5}
			{item "ammo hmgun_rus_kpvt" 800}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon			"122mm_m-62-t2" filling "ammo bulletrus_122_l48 apds" 1}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic_stabilised"
				zeroing(2.5)
				dispersion(0.30)
			)
		}
	{place "mgun2"
			{type "coaxial"}
			{weapon "kpvt" filled}
			{foresight "foresight5"}
			{gunner "gunner"}
			{charger "gunner"}
			("abm_mgun")
			{basic}
		}
		{place "mgun"		;aa (optional until 1972)
			{type 			"aa"}
			{weapon			"kpvt" filled}
			{gunner			"commander"}
			{charger		"commander"}
			{LinkBone		"mgun_help"}
			{LinkAnimation	"off"}
			("abm_mgun")
			{basic}
			{ai_in_manual}
		}
	}

	{mass 52000}
	{Chassis
		("tank_trace" fx("tracks_big") step(0.47) len(0.98))
		("mobility_tank"
			speed(37) ;----------Max speed when fully accelerated on road, km/h.
			reverse(6) ;---------Max speed in reverse on road, km/h.
			traverse(25) ;-------Track traverse, per second, in degrees.
			weight(52.0) ;-------Weight in Tonnes.
			power(700) ;---------Engine Power, in hp.
			track(4.0) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(650) ;----------Fuel capacity in Litres.
			type(diesel) ;-------Fuel type. (diesel OR fuel)
			range(250) ;---------Range in km, off-road.
		)
	}

	{Extension "t-10.mdl"}

	{bone "turret"			;gun horizontal
		{speed2 24}			;degree per second
	}
	{bone "gun_rot"			;gun vertical
		{speed2 4}			;degree per second
		{limits -5 20}		;min down to max up
	}
}