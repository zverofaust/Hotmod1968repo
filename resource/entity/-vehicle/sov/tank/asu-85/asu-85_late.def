{game_entity
	(include "/properties/tank_assaultgun.ext")
	(include "/properties/shadow/tank.inc"  scale(1.2))
	(include "/properties/selection/vehicle.inc"  scale(1.2))
	{props "td" "light" "-turret" "mantlet" "vision_lev03" "muzzle_85mm_93mm_sides" "diesel" "cw_panorama" "smoke" "ess"}
	(include "asu-85.ext")
	{targetclass "tank_light"}
	{targetSelector "tank_medium"}
	{PatherId "t34"}
	
	{extender "enumerator"
		{digit_folder "cw"}
	}
	
	("crew_4_human_extended")
	("gunner_visible")
	
	{boarder
		{anm "driver"
			{forward {begin "board_Is-2"} {end "seat_commander_hatch"} {base "open_driver"}}
			{reverse {end "emit_tank_1_hold"} {base "open_driver"}}
		}
		{anm "left"
			{forward {begin "board_Is-2"} {end "seat_commander_hatch"} {base "open_left"}}
			{reverse {end "emit_tank_1_hold"} {base "open_left"}}
		}
		{anm "right"
			{forward {begin "board_Is-2"} {end "seat_commander_hatch"} {base "open_right"}}
			{reverse {end "emit_tank_1_hold"} {base "open_right"}}
		}
		{anm "armor"
			{forward {begin "board_HighArmor"} {end "pose_seat_armor_1"}}
			{reverse {end "emit_tank_2"}}
		}
		{anm "armor1"
			{forward {begin "board_HighArmor"} {end "pose_seat_armor_1"}}
			{reverse {end "emit_body"}}
		}
	}

	("seat_human" place(seat1) bone(seat01) door(emit4)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit5)  animation(armor1))
	("seat_human" place(seat3) bone(seat03) door(emit4)  animation(armor))
	("seat_human" place(seat4) bone(seat04) door(emit5)  animation(armor1))
	("seat_human" place(seat5) bone(seat05) door(emit4)  animation(armor))
	("seat_human" place(seat6) bone(seat06) door(emit5)  animation(armor1))
	("seat_human" place(seat7) bone(seat07) door(emit4)  animation(armor))
	("seat_human" place(seat8) bone(seat08) door(emit5)  animation(armor1))

	{sensor
		{visor "main"
			{bone "visor1"}
		}
		{visor "commander"
			{vision "tank_commander"}
			{bone "visor3"}
		}
	}
	
	{extender "smokescreen"
		{cooldown 20}
		{itemTags "can"}
	}
	
	{extender "inventory"
		{box
			{item "bullet85_d48 aphe" 10}		; 40 rounds
			{item "bullet85_d48 aphebc" 5}
			{item "bullet85_d48 heat" 5}
			{item "bullet85_d48 he" 22}
			{item "ammo mgun_rus belt" 2000}		;
			{item "ammo hmgun_rus" 800}
			{item "satchel_charge_rus" 1}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "85mm_d-70" filling "bullet85_d48 aphe" 1}
			{gunner "gunner"}
			{charger "charger"}
			("hm68_abm_td")
		}
		{place "mgun2"		;coax
			{weapon			"sgmt" filled}
			{foresight		"foresight5"}
			("abm_mgun")
			{basic}
		}
		{place "mgun"
			{weapon			"dshk" filled}
			{gunner			"commander"}
			{charger		"commander"}
			{LinkBone		"mgun_bone"}
			{LinkAnimation	"off"}
			("abm_mgun")
		}
		{place "mgun1"
			{type "commander"}
			{weapon "commander_vision"}
			{foresight "visor3"}
			{gunner "commander"}
			{basic}
			{ai_in_manual}
		}
	}

	{mass 15500}
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.4) len(0.5))
		("mobility_tank"
			speed(45) ;----------Max speed when fully accelerated on road, km/h.
			reverse(8);---------Max speed in reverse on road, km/h. ;//6.9 historical + 2 due to terrain modifier
			traverse(36) ;-------Track traverse, per second, in degrees.
			weight(15.5) ;-------Weight in Tonnes.
			power(210) ;---------Engine Power, in hp.
			track(3.5) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(400) ;----------Fuel capacity in Litres.
			type(diesel) ;-------Fuel type. (diesel OR fuel)
			range(230) ;---------Range in km, off-road.
		)
	}

	{Extension "asu-85_late.mdl"}

	{bone "gun_rot_v" ; mantlet vertical
		{limits -4 15}
		{speed2 5}
	}

	{bone "gun_rot_h" ; mantlet horizontal
		{limits -15 15}
		{speed2 6}
	}

	{bone "visor3" ; commander optics
		{limits -15 4}
	}
	
	{bone "mgun_a_rot2" ; vertical
		{limits -6 30}
		{speed2 60}
	}
	{bone "mgun_a_rot1" ; horizontal (with gunner)
        {limits -5 5}
		{speed2 60}
	}
}
