{game_entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc" scale(0.9))
	(include "/properties/selection/vehicle.inc" scale(0.8))
	{props "mrl_vehicle" "with_gun" "moto" "vision_lev01" "tractor" "tractor_light" "detect_spg" "hatch"}
	{able "emit_on_attack"}
	{able "emit_on_attack"}
	{targetSelector "rocket"}
	{targetclass "howitzer"}
	{PatherId "kubel"}
	{targetSelector "car_bullet"}

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	("fuel" args "fuel")
	("transmission" args "transmission")
	{volume "engine" {thickness 10}}
	("gun" repair(30) thickness(2))
	
	(include "crew.ext")
	
	{sensor
		{visor "passenger"
			{vision "human"}
			{bone "body"}
		}
	}


	{extender "inventory"
		{weapon "mgun" {mask "mountable"}}
		{box
			{item "ammo rocket140_bm14" 32}		;1 reload
			{item "rpd_drum ammo" 1500}
			{item "rpd" filled {user "mgun"}}
		}
	}
	
	{Weaponry
		{place "gun"
			{Barrels 6}
			{weapon "weapon 140mm_rpu14" filled}
			{gunner			"commander"}
			{charger		"commander"}
			{StationaryFiring}
			("hm68_abm_gun")
		}
		{place "mgun"
			{LinkBone "mgun_help"}
			{gunner "commander"}
			{charger "commander"}
			{LinkBone		"mgun_help"}
			{LinkAnimation	"off"}
			{basic}
			{ai_in_manual}
		}
	}


	{Chassis
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(80) ;----------------------------------Max speed.
			speedatmaxturn(12) ;-------------------------Max speed at max turn.
			reverse(18) ;--------------------------------Max speed in Reverse.
			weight(1.32) ;-------------------------------Weight in Tonnes.
			power(54) ;----------------------------------Horse Power.
			fuel(60) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(170) ;---------------------------------Range in Kilometers.
		)
	}
	
	("glass" args "glassl" 1)
	("glass" args "glassr" 1)
	("glass" args "glass_tarp" 1)
	
	{Volume "body1"
		{thickness 4}
	}
	{Volume "body2"
		{thickness 4}
		{able{holed}}
	}
	{Volume "engine"
		{thickness 4}
	}
	("shield_cover" args "shield1")
	("shield_cover" args "shield2")
	("shield_cover" args "shield3")
	("shield_cover" args "shield4")
	
	{extender "shield"
			{on}
	}

	
	{Chassis
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(80) ;----------------------------------Max speed.
			speedatmaxturn(12) ;-------------------------Max speed at max turn.
			reverse(18) ;--------------------------------Max speed in Reverse.
			weight(1.32) ;-------------------------------Weight in Tonnes.
			power(54) ;----------------------------------Horse Power.
			fuel(60) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(170) ;---------------------------------Range in Kilometers.
		)
	}
	
	{Extension "gaz-69_rpu-14.mdl"}

	{volume "shield"
		{able {nowounddecal}}
		{thickness 0.3}
	}
	{component "shield"	
		{tags "shield"}
		{RepairTime 20}
	}
	{extender "shield"
			{on}
	}
	{bone "mgun_rot"
		{limits 20 -5}
		{speed2 38}
	}
	{bone "mgun_turret"
		{limits -15 15}
		{speed2 38}
	}
	{bone "gun_rot"
		{limits 50 -5}
		{speed2 5}
	}
	{bone "turret"
		;{limits -18 18}
		{speed2 5}
	}
	(mod "mp"
		{brain
			{properties
				{fire_mode hold}
			}
		}	
	)	
