	(include "/properties/resupply_hotmod.inc")
	{props "multi_board" "truck" "vision_lev02" "tractor" "tractor_medium" "supply"}
	{able "emit_on_attack"}
	{collider "truck"}
	{patherId "gazaaa"}

	("crew_2_human")
	
	("truck_ammo")
	
	("board_animation"
		place(driver)
		board_begin(board_big-midcar_driver)
		board_end(seat_driver_car)
		base(doorleft)
	)
	("board_animation"
		place(commander)
		board_begin(board_big-midcar)
		board_end(seat_passenger)
		base(doorright)
	)
	
	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
    ("wheel" args "wheelright3")
	("wheel" args "wheelleft2")
	("wheel" args "wheelleft3")

	{volume "bodyback" {material "wood"} {tags "wood"}}
	
	{mass 3100}


	{Chassis
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03d") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(60) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(22) ;--------------------------------Max speed in Reverse.
			weight(7.8) ;------------------------------Weight in Tonnes.
			power(104) ;----------------------------------Horse Power.
			fuel(215) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(405) ;---------------------------------Range in Kilometers.
		)
	}
	
	{Extension "zil131_ammo.mdl"}
	{extender "shield"
			{on}
		)
	}
	{component "shield"	
		{RepairTime 10}
	}
	{volume "shield"
		{thickness 0.3}
	}
	{component "cabin"	
		{RepairTime 12}
	}
	{volume "cabin"
		{thickness 6}
	}
	{volume "engine"
		{thickness 6}
	}
	{Volume "fuel"
		{thickness 1}
	}
	{Volume "Body" {thickness 7}}
