{game_entity		;Mi-4AV
	(include "/properties/airborne_helicopter.ext")
	;{props "wheeled"}
	{PatherID "bf109"}
	(include "/properties/shadow/airborn.inc" scale(2.2))
	(include "/properties/selection/airborne.inc" scale(3.0))
	(include "/properties/car_crew.ext")
	{targetSelector "helicopter_atgm"}
	
	("helicopter_tier1")
	
	{Extender "detail"
		{random 0}
	}

	{Placer
		{place "driver" {turnOff {targetable}}}
	}
	
	(include "/properties/car_crew.ext")
	{boarder
		{anm "left"
			{forward	{begin	"board_plane_left"} {end "seat_driver_car"} {base "doorleft"}}
			{reverse	{end	"board_plane_left" -1} {base "doorleft" -1}}
		}
		{anm "right"
			{forward	{begin	"board_plane_left"} {end "seat_passenger"} {base "doorright"}}
			{reverse	{end	"board_plane_left" -1} {base "doorright" -1}}
		}
	}
	
	("crew_human"		place(driver)	bone(driver)	door(emit1) animation(left)			group(crew))
	("crew_human"		place(commander) bone(driver) 	door(emit2) animation(right)		group(crew))
	
	;add extra boarding door for passengers

	;volume/component, thickness
	("glass" args "window1")
	("glass" args "window2")
	("glass" args "window3")
	("glass" args "window4")
	("glass" args "window5")
	("glass" args "window6")
	("glass" args "window7")
	("glass" args "window8")
	("glass" args "window9")
	("glass" args "window10")
	("glass" args "window11")
	("glass" args "window12")
	("glass" args "window13")
	("glass" args "window14")
	("glass" args "window15")
	("glass" args "window16")
	("glass" args "window17")

	; main body parts
	("body" args "body")
	("body" args "body1")
	("body" args "body2")
	("body" args "body3")
	("body" args "body4")
	("body" args "body5")
	
	;main rotor + blades
	("rotor" args "rotor")
	("rotor" args "propeller1")
	("rotor" args "propeller2")
	("rotor" args "propeller3")
	("rotor" args "propeller4")

	;back rotor + blades
	("rotor_b" args "rotor_b")
	("rotor_b" args "propeller_b")
	("rotor_b" args "propeller_b1")
	("rotor_b" args "propeller_b2")

	("wheel" args "wheell1")
	("wheel" args "wheelr1")
	("wheel" args "wheell2")
	("wheel" args "wheelr2")
	
	;engines
	("engine" args "engine")

	{extender "inventory"
		{box
			;{item "ammo 57mm_s-5" 94}
		}
	}
	
	{Weaponry
		{place "gun"
			{weapon "57mm_ub-16_x4" filled}
			{barrels 96}
			{foresight "foresight3"}
			{shooter "shooter_a"}
			{gunner "driver"}
			{charger "driver"}
			{basic}
			{rotate}
			{ai_in_manual}
		}
		{place "mgun"
			{rotate}
			{gunner			"driver"}
			{charger		"driver"}
			{LinkBone		"mgun_hlp"}
			{LinkAnimation	"off"}
			{weapon			"a-12_7" filled}
			{basic}
			{ai_in_manual}
		}
		{place "gun2"
			{weapon			"atgm_3m11_x4" filled}
			{barrels		4}
			{gunner			"driver"}
			{charger		"driver"}
			{shooter		"shooter_b"}
			{foresight		"foresight3"}
			{rotate}
			{basic}
		}
	}

	{mass 5100}
	
	{Chassis "wheel"
		("car_trace" fx("tracewheel05") step(0.07) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
	}
	{Chassis "airborne"
		("heli_model"
			speed(185)  ;//---------Max speed (at sea level), km/h.
			climb_speed(10) ;//-----Climb rate at sea level, in m/s
			turn(900) ;//-----------Turn-and-burn radius in meters, tightest sustained turn
			turnMP(400) ;//----------Turn-and-burn radius in meters, tightest sustained turn in Multiplayer
			aerodynamics(1.1) ;//---Aerodynamic efficiency rating (0-3)
			weight(5100) ;//--------Weight in kg.
			power(1680) ;//---------Horse Power.
			fuel(650) ;//-----------Fuel capacity in Liters.
			range(755) ;//----------Distance can travel with full fuel tank, in km.
			roll_rate(50) ;//-------Roll rate, in degrees per second.
			roll_angle(60) ;//------Maximum roll angle, in degrees.
		)
	}

	;main rotor + blades
	
	;("part" args "rotor")
	;("part" args "propeller1")
	;("part" args "propeller2")
	;("part" args "propeller3")
	;("part" args "propeller4")

	;back rotor + blades
	;("part" args "rotor_b")
	;("part" args "propeller_b")
	;("part" args "propeller_b1")
	;("part" args "propeller_b2")

	("wheel" args "wheell1")
	("wheel" args "wheelr1")
	("wheel" args "wheell2")
	("wheel" args "wheelr2")

	{Extension "mil_mi4_heavy.mdl"}
	
	{bone "mgun_rot_h"		;mgun: right/left
		{speed 0.025}
		{limits -45 45}
	}
	{bone "mgun_rot_v"			;mgun: up/down
		{speed 0.025}
		{limits -15 45}
	}
	{bone "gun_rot_h"			;rockets: right/left
		{speed 0.01}
		{limits -5 5}
	}
	{bone "gun_rot_v"			;rockets: up/down
		{speed 0.01}
		{limits -25 15}
	}
}
