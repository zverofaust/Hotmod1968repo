	{mass 5100}
	
	{Chassis "wheel"
	}
	
	{Chassis "helicopter"
		{Locomotion ("locomotion_transport")}
	}

	{Extension "mil_mi4_heavy.mdl"}
	
	{bone "mgun_rot_h"		;mgun: right/left
		{speed 0.025}
		{limits -45 45}
	}
	{bone "mgun_rot_v"			;mgun: up/down
		{speed 0.025}
		{limits -15 45}
	}
	{bone "gun_rot_h"			;rockets: right/left
		{speed 0.01}
		{limits -10 10}
	}
	{bone "gun_rot_v"			;rockets: up/down
		{speed 0.01}
		{limits -15 15}
	}
