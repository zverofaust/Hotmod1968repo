	{Obstacle "in_air"
        {Obb2
            {Center 10 0}
            {Extent 190 160}
            {Axis -1 0}
        }
        {rotate}
    }
    {ObstacleId "helicopter" "in_air"}
	
	{extender "inventory"
		{box
			{item "ammo hmgun_rus" 1000}
			{item "ammo 57mm_s-5" 96}
			{item "ammo 3m11 atgm" 4}
		}
	}
	
	{Weaponry
		{place "gun"
			{weapon "57mm_ub-16_x6" filled}
			{barrels 64}
			{foresight "foresight3"}
			{shooter "shooter_a"}
			{gunner "driver"}
			{charger "driver"}
			{basic}
			{rotate}
			{ai_in_manual}
		}
