{game_entity			;BTR-60PA
	(include "/properties/armoredcar.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.0))
	{props "apc" "tank" "turret" "wheeled" "multi_board" "vision_lev02" "amphibia" "tractor" "tractor_medium" "muzzle_kpvt"}
	{able "emit_passengers_on_enemy"}
	(include "btr-60pb.ext")
	{targetclass "armoredcar"}
	{targetSelector "tank_zenite"}
	
	(include "/properties/resupply_hotmod.inc")
	("apc_ammo")
	
	{patherId "amphibia"} 
	
 	;Crew: driver, commander, 8 passengers
	
{boarder
	{anm "driver"
		{forward	{begin	"board_tank_right"} {end "seat_driver_car"} {base "open_l1"}}
		{reverse	{end	"emit_tank_2_hold"} {base "open_l1" -1}}
	}
	{anm "drivergunner"
		{forward	{begin	"board_tank_left"} {end "seat_driver_car"} {base "open_r1"}}
		{reverse	{end	"emit_tank_2_hold"} {base "open_r1" -1}}
	}
	{anm "passenger_left"
		{forward	{begin	"board_tank_right"} {end "seat_passenger"} {base "open_l1"}}
		{reverse	{end	"emit_tank_2_hold"} {base "open_l1" -1}}
	}
	{anm "passenger_right"
		{forward	{begin	"board_tank_left"} {end "seat_passenger"} {base "open_r1"}}
		{reverse	{end	"emit_tank_2_hold"} {base "open_r1" -1}}
	}
	{anm "passenger_left1"
		{forward	{begin	"board_tank_right"} {end "seat_passenger"} {base "open_r2"}}
		{reverse	{end	"emit_tank_2_hold"} {base "open_r2" -1}}
	}
	{anm "passenger_right1"
		{forward	{begin	"board_tank_left"} {end "seat_passenger"} {base "open_l2"}}
		{reverse	{end	"emit_tank_2_hold"} {base "open_l2" -1}}
	}
}
	("crew_human" place(driver)		bone()		door(emit1) animation(driver) group(crew))
	("crew_human" place(gunner)		bone()		door(emit2) animation(gunner) group(crew))
	
	(include "/properties/hotmod_crew.ext")
	("passenger_invisible"		place(seat1)	door(emit1)			animation(passenger_left)							)
	("passenger_invisible"		place(seat2)	door(emit2)			animation(passenger_right)							)
	("passenger_invisible"		place(seat3)	door(emit1)			animation(passenger_left)							)
	("passenger_invisible"		place(seat4)	door(emit2)			animation(passenger_right)							)
	("passenger_invisible"		place(seat5)	door(emit1)			animation(passenger_left)							)
	("passenger_invisible"		place(seat6)	door(emit2)			animation(passenger_right)							)
	("passenger_invisible"		place(seat7)	door(emit3)			animation(passenger_left1)							)
	("passenger_invisible"		place(seat8)	door(emit4)			animation(passenger_right1)							)
	
	
	{placer
		{place "driver"	{visor "driver"}}
		{place "gunner"	{visor "main"}}
	}

	{extender "enumerator"
		{digit_folder "cw"}
	}

	{extender "inventory"
		{box
			{item "ammo hmgun_rus_kpvt" 500}
			{item "pk_box" 3000}		;4 boxes
			{item "satchel_charge_rus" 1}
		}
	}
	{Weaponry
		{place "gun"
			{weapon			"kpvt" filled}
			{foresight 		"foresight1"}
			{gunner			"gunner"}
			{charger		"gunner"}
			;{LinkBone		"mgun_hlp"}
			;{LinkAnimation	"off"}
			("abm_mgun")
		}
		{place "mgun2"
			{type "coaxial"}
			{weapon "pkt" filled}
			{foresight "foresight5"}
			{gunner "gunner"}
			{charger "gunner"}
			("abm_mgun")
			{basic}
		}
	}

	{mass 10200}
	{Chassis "wheel"
		("car_trace" fx("tracewheel03") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.09) wheell("wlr") wheelr("wrr") bonel("FXtraceL3") boner("FXtraceR3"))
		("mobility_car"
			speed(70) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(22) ;--------------------------------Max speed in Reverse.
			weight(10.2) ;------------------------------Weight in Tonnes.
			power(180) ;----------------------------------Horse Power.
			fuel(290) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(500) ;---------------------------------Range in Kilometers.
		)
		{switch
			{exitFromWater}
			{terrain not "water" "deep_water"}
		}
	}
	{chassis "water"
		("chassis_defaults")
		{ignorePatherBounds}
		{waterline 1.4}
		{switch
			{terrain "water" "deep_water"}
		}
	}	
	{Extension "btr-60pb.mdl"}
	
	{bone "gun_rot"			;vertical gun movement
		{limits -5 30}		;min up to max down
	}
}




