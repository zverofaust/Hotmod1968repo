{game_entity		;ZIL-157
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.1))
	(include "/properties/resupply_hotmod.inc")
	("truck_ammo")
	{props "multi_board" "truck" "vision_lev02" "supply" "tractor" "tractor_medium" "heavy_supply"}
	{able "emit_on_attack"}
	{collider "truck"}
	{patherId "gazaaa"}

	;volume, component/tag, thickness
	{volume "body"}
	{volume "body1" }
	{volume "body2"}
	{volume "body3" {material "wood"} {tags "wood"} }

	;volume/component, thickness
	("glass" args "glass_left" 1)
	("glass" args "glass_right" 1)
	("glass" args "glass_front" 1)
	("glass" args "glass_rear" 1)
	("fuel" args "fuel1")
	("fuel" args "fuel2")
	("transmission" args "transmission")
	
	("wheel" args "wheelleft1")
	("wheel" args "wheelright1")
	("wheel" args "wheelleft2")
	("wheel" args "wheelright2")
	
	("crew_2_human")

	("board_animation"
		place(driver)
		board_begin(board_big-midcar_driver)
		board_end(seat_driver_car)
		base(doorleft)
	)
	("board_animation"
		place(commander)
		board_begin(board_big-midcar)
		board_end(seat_passenger)
		base(doorright)
	)

	{boarder
		{anm "commander"
			{forward  {base "door_right"}}
			{reverse  {base "door_right"}}
		}
		{anm "driver"
			{forward   {base "door_left"}}
			{reverse  {base "door_left"}}
		}
		{anm "passenger"
			{forward {begin "board_body"} {end "seat_passenger"} {base "board"}}
			{reverse {end "emit_body" 1} {base "board"}}
		}
	}
	
	{extender "inventory"
		{box
			{item "repair_kit" 5}
		}
	}
	
	{mass 5110}
	{Chassis
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03d") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(60) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(22) ;--------------------------------Max speed in Reverse.
			weight(2.475) ;------------------------------Weight in Tonnes.
			power(78) ;----------------------------------Horse Power.
			fuel(105) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(420) ;---------------------------------Range in Kilometers.
		)
	}

	{Extension "ca-30_ammo.mdl"}
}
