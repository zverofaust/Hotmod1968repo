
{game_entity
	(include "/properties/helicopter.ext")
	(include "/properties/shadow/airborn.inc" scale(2.5))
	(include "/properties/selection/airborne.inc" scale(2.00))
	(include "/properties/car_crew.ext")
	{props "helo" "insertion" "multi_board" "heli_sling" "heli_passenger"}
	{PatherID "helicopter"}
	{targetclass "helicopter"}
	{targetSelector "helicopter"}

	("helicopter_tier1")
		
	{extender "enumerator"}
	
	{boarder
		{anm "driver"
			{forward	{begin	"board_sdkfz250a"}	 {end "seat_driver_car"} {base "doorsfront"}}
			{reverse 	{end	"emit_body"} {base "doorsfront"}}
		}
		{anm "commander"
			{forward	{begin	"board_sdkfz250a"} 	{end "seat_driver_car"} {base "doorsfront"}}
			{reverse 	{end	"emit_body"} {base "doorsfront"}}
		}
		{anm "passengerf1"
			{forward	{begin 	"halftrack_pass_l_01_board"}	{end "seat_passenger"} {base "doorsfront"}}
			{reverse 	{end	"emit_body"} {base "doorsfront"}}
		}
		{anm "passengef2"
			{forward	{begin 	"halftrack_pass_l_01_board"} 	{end "seat_passenger"} {base "doorsfront"}}
			{reverse 	{end	"emit_body"} {base "doorsfront"}}
		}
		{anm "passengerr1"
			{forward	{begin 	"board_lowarmor"} {end "seat_passenger"} {base "doorsback"}}
			{reverse 	{end	"emit_body"} {base "doorsback"}}
		}
		{anm "passengerr2"
			{forward	{begin 	"board_lowarmor"} {end "seat_passenger"} {base "doorsback"}}
			{reverse 	{end	"emit_body"} {base "doorsback"}}
		}
	}
	("crew_human" place(driver) 	bone(driver) 		door(emit3) animation(driver))
	("crew_human" place(commander) 	bone(commander) 	door(emit4) animation(commander))
	
	("crew_human" place(seat01) bone(seat01) 	door(emit3) animation(passengerf1) group(passenger))
	("crew_human" place(seat02) bone(seat02) 	door(emit4) animation(passengerf1) group(passenger))
	("crew_human" place(seat03) bone(seat03) 	door(emit5) animation(passengerf1) group(passenger))
	("crew_human" place(seat04) bone(seat04)		door(emit6) animation(passengerf1) group(passenger))
	("crew_human" place(seat05) bone(seat05)		door(emit3) animation(passengerf1) group(passenger))
	("crew_human" place(seat06) bone(seat06)		door(emit4) animation(passengerr2) group(passenger))
	("crew_human" place(seat07) bone(seat07)		door(emit5) animation(passengerr1) group(passenger))
	("crew_human" place(seat08) bone(seat08) 	door(emit6) animation(passengerr2) group(passenger))

	{placer
		{place "driver"		{group "crew"}}
		{place "commander"	{group "crew"}}
		{place "attach"
			{Linkbone "attach"}
			{entity "m50_airlift"}
			{handlebone "basis"}
		}
	}
	
	{Sensor
		{Visor "main"
			{bone	 "pivot_back"}
		}
		{Visor "gunner1"
			{vision "vehicle_top_mgun"}
			{bone	"visor3"}
		}
		{Visor "gunner2"
			{vision "vehicle_top_mgun"}
			{bone	"visor2"}
		}
	}

;volume/component, thickness
	("glass" args "window1")
	("glass" args "window2")
	("glass" args "window3")
	("glass" args "window4")
	("glass" args "window5")
	("glass" args "window6")
	("glass" args "window7")
	("glass" args "window8")
	("glass" args "window9")
	("glass" args "window10")
	("glass" args "window11")
	("glass" args "window12")
	("glass" args "window13")
	("glass" args "window14")
	("glass" args "window15")
	("glass" args "window16")
	
	;main body parts
	("body" args "body")
	("body" args "body1")
	("body" args "body2")
	("body" args "wingr")
	("body" args "wingl")

	;main rotor + blades
	("rotor" args "rotor")
	("rotor" args "propeller")
	("rotor" args "propeller1")
	("rotor" args "propeller2")
	("rotor" args "propeller3")
	("rotor" args "propeller4")

	;back rotor + blades
	("rotor_b" args "rotor_b")
	("rotor_b" args "propeller_b")
	("rotor_b" args "propeller_b1")
	("rotor_b" args "propeller_b2")
	("rotor_b" args "propeller_b3")
	
	;engines
	("engine" args "engine")
	
	{Obstacle "in_air"
        {Obb2
            {Center 10 0}
            {Extent 190 160}
            {Axis -1 0}
        }
        {rotate}
    }
    {ObstacleId "helicopter" "in_air"}
	
	{extender "inventory"
		{Box
			
		}
	}

	{Weaponry
		{place "dummy"
			{type			"dummy"}
			{rotate}
			{weapon			"dummy"}
			{gunner			"driver"}
			{charger		"driver"}
			{basic}
		}
	}

	{mass 6000}

	{ObstacleId "helicopter"}
	
	{Chassis "helicopter"
		{Locomotion ("locomotion_transport")}
	}
	
	{Extension "ch-37.mdl"}
}
