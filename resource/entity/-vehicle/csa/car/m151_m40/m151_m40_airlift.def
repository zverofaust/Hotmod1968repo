			{vision "human"}
			{bone "basis"}
		}
		{visor "gunner"
			{vision "cannon_range_200"}
			{bone "visor1"}
		}
	}
	
	{extender "inventory"
		{box
			{item "ammo bullet106_m40 heat" 4}
			{item "ammo bullet106_m40 he" 2}
		}
	}

