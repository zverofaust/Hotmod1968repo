	{Volume "Body"
		{tags "body"}
		{component "body"}
		{thickness 4}
	}
	
	{Extension "m151_m40.mdl"}

	{bone "gun_rot"
		{limits -5 25}
		{speed2 16}
	}
	{bone "turret"
		{limits -120 120}
