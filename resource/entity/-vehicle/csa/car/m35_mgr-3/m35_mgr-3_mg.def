{game_entity		;M35A2C
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.1))
	{props "mrl_vehicle" "with_gun" "multi_board" "truck" "vision_lev02" "tractor" "tractor_heavy" "muzzle_hmg"}
	{able "emit_on_attack"}
	{collider "truck"}
	{patherId "gazaaa"}


	;volume, component/tag, thickness
	{Volume "body1"
		{thickness 5}
	}
	{Volume "body2"
		{thickness 5}
	}

	{Volume "engine"
		{thickness 15}
	}
	
	;volume/component, thickness
	("glass" args "glass1" 1)
	("glass" args "glass2" 1)

	("armor" args "bodyback" 5)
	("armor" args "bodyback1" 5)
	("armor" args "bodyback2" 5)
	("armor" args "bodyback3" 5)
	("armor" args "bodyback4" 5)
	
	("fuel" args "fuel1")
	("transmission" args "transmission")
	
	{boarder
		{anm "gunner"
			{forward	{begin	"board_body"} {end "seat_commander_hatch"} {base "doorright"}}
			{reverse	{end	"emit_body" 1} {base "doorright" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_body"} {end "seat_passenger"} {base "doorright"}}
			{reverse	{end	"emit_body" 1} {base "doorright" -1}}
		}
		{anm "driver"
			{forward	{begin	"board_body"} {end "seat_driver_car"} {base "doorleft"}}
			{reverse	{end	"emit_body"} {base "doorright" -1}}
		}
	}
	
	("crew_human"	place(driver)		bone(driver)	door(emit1) animation(driver)	 	group(crew))
	("crew_human"	place(commander)	bone(commander)	door(emit2) animation(commander)	 group(crew))
	("crew_human"	place(gunner)		bone(gunner)	door(emit2) animation(gunner)	 	group(crew))
	


	{extender "inventory"
		{box
			{Size 20 5}
			{clear}
			{item "ammo rocket318_mgr3" 5}	
			{item "ammo hmgun_usa" 1000}
		}
	}
	
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{weapon "weapon 318mm_mgr3" filled}
			{gunner			"commander"}
			{charger		"commander"}
			{RestoreIKAfterAim}
			{StationaryFiring}
			("hm68_abm_mrl")
		}
		{place "mgun2"
			{weapon "browning_m2" filled}
			{gunner "gunner"}
			{charger "gunner"}
			;{foresight "foresight5"}
			{LinkBone		"mgun_help"}
			{LinkAnimation	"off"}
			{basic}
			{ai_in_manual}
		}
	}

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")
	("wheel" args "wheelright3")
	("wheel" args "wheelleft3")

	{mass 5654}
	{Chassis
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03d") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(58) ;----------------------------------Max speed.
			speedatmaxturn(13) ;-------------------------Max speed at max turn.
			reverse(8) ;--------------------------------Max speed in Reverse.
			weight(5.6) ;------------------------------Weight in Tonnes.
			power(127) ;----------------------------------Horse Power.
			fuel(280) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(480) ;---------------------------------Range in Kilometers.
		)
	}

	{Extension "m35_mgr-3_mg.mdl"}
	
	{bone "mgun_rot_h"
		{limits -20 20}
		{speed2 60}
	}
	{bone "mgun_rot"
		{speed2 60}
		{limits -10 25}
	}
	{bone "gun_rot"
		{limits 10 -5}
		{speed2 5}
	}
	{bone "turret"
		{limits -23 23}
		{speed2 5}
	}
	(mod "mp"
		{brain
			{properties
				{fire_mode hold}
			}
		}	
	)
}