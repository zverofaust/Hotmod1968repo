{game_entity
	(include "/properties/cannon.ext")
	(include "/properties/shadow/tank.inc" scale(0.6))
	{Extension "40mm_bofors.mdl"}
	(include "/properties/selection/cannon.inc" scale(0.7))
	{props "aagun" "wheeled" "automatic" "vision_lev02_can" "muzzle_37mm_40mm_auto" "cannon_sandbag_standard" "trailer" "trailer_medium" "detect_cannon_aa" "shell_eject" "aa_medium"}
	{PatherID "cannon.large"}
	{targetclass "cannon_zenite"}
	{targetSelector "cannon_zenite"}

	("wheel" args "wheelright1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft1")
	("wheel" args "wheelleft2")

	("gun" repair(30) thickness(20))

	("armor_light_cannon")
	("crew_wheeled_cannon")

	{boarder
		{anm "gunner"
			{forward {end "pose_61K_gunlayer_right" 10}}
		}
		{anm "commander"
			{forward {end "pose_61K_gunlayer_left" 10}}
		}
		{anm "driver1"	;// gunner
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"	;// charger
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "seat1"	;// gunner
			{forward {end "AAgun_61k_gunner" 10}}
		}
		{anm "seat2"	;// charger
			{forward {end "AAgun_61k_charger" 10}}
		}
	}
	{extender "cannon"
		{animation
			{switch "close"}
			;// "gunner" "commander"
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right"}
			{aim "Cannon_61K_gunlayer_right" "Cannon_61K_gunlayer_left"}
			{reload ""  ""}
		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
		{rotate_ik_Limit 0}
	}
	
	{extender "inventory"
		{box
			{item "bullet40_bofors ap" 300}
			{item "bullet40_bofors he" 300}
			{item "sandbag_vehicle" 1}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "40mm_bofors" filling "bullet40_bofors ap" 4}
			("abm_dymamic_aa"
				zeroing(1.95)
				dispersion(0.24)
			)
		}
	}

	{mass 1980}
	{Chassis "track"
		("car_trace" fx("tracewheel02a") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel02a") step(0.15) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_cannon"
			speed(5.9) ;---------------------------------Max speed.
			weight(1980) ;-------------------------------Weight in Kilograms.
		)
	}

	{bone "gun_rot"
		{limits -5 85}
		{speed2 50}
	}
	{bone "turret"
		{speed2 50}
	}
}