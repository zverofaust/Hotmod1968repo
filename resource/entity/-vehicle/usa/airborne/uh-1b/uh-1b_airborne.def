{game_entity		;UH-1B/C with M21 subsystem
	(include "/properties/airborne_helicopter.ext")
	{props "wheeled" "vision_lev02_air"}
	{PatherID "bf109"}
	(include "/properties/shadow/airborn.inc" scale(2.2))
	(include "/properties/selection/airborne.inc" scale(1.5))
	(include "/properties/car_crew.ext")
	{targetSelector "airborne_bullet"}

	("helicopter_tier1")

	;{extender "enumerator"}

	{boarder
		{anm "driver"
			{forward	{begin	"board_big-midcar_driver"} {end "seat_driver_car"} {base "doorleft"}}
			{reverse 	{end	"board_big-midcar_driver" -1} {base "doorleft" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_big-midcar"} {end "seat_driver_car"} {base "doorright"}}
			{reverse 	{end	"board_big-midcar" -1} {base "doorright" -1}}
		}
	}
	("crew_human" place(driver) bone(driver) door(emit1) animation(driver))
	("crew_human" place(commander) bone(commander) door(emit2) animation(commander))
	
	{placer
		{place "driver"		{group "crew"}}
		{place "commander"	{group "crew"}}
	}
	
	{Sensor
		{Visor "main"
			{bone	 "pivot_back"}
		}
	}
	
	;volume/component, thickness
	("glass" args "window1")
	("glass" args "window2")
	("glass" args "window3")
	("glass" args "window4")
	("glass" args "window5")
	("glass" args "window6")
	("glass" args "window7")
	("glass" args "window8")
	("glass" args "window9")
	("glass" args "window10")
	("glass" args "window11")
	("glass" args "window12")
	("glass" args "window13")
	("glass" args "window14")
	("glass" args "window15")
	("glass" args "window16")
	
	;main body parts
	("body" args "body")
	("body" args "body1")
	("body" args "body2")
	("body" args "body3")
	("body" args "body4")

	;main rotor + blades
	("rotor" args "rotor")
	("rotor" args "propeller")
	("rotor" args "propeller1")

	;back rotor + blades
	("rotor_b" args "rotor_b")
	("rotor_b" args "propeller_b")
	("rotor_b" args "propeller_b1")
	
	;engines
	("engine" args "engine")

	{extender "inventory"
		{box
            {item "ammo 70mm_ffar" 12}
        }
    }
	
	{Weaponry
		{place "mgun2"
			{rotate}
			{weapon			"m134_b" filled}
			;{barrels 		2}
			{gunner			"driver"}
			{charger		"driver"}
			{foresight		"foresight4"}
			{basic}
			{ai_in_manual}
		}
		{place "mgun"
			{rotate}
			{weapon			"m134_a" filled}
			;{barrels 		2}
			{gunner			"driver"}
			{charger		"driver"}
			{foresight		"foresight5"}
			{basic}
			{ai_in_manual}
		}
		{place "gun"
			{rotate}
			{weapon			"70mm_ffar_m141_x2" filled}
			{barrels		14}
			{gunner			"driver"}
			{charger		"driver"}
			{shooter		"shooter_a"}
			{foresight		"foresight2"}
			{basic}
		}
	}

	{mass 4309}
	
	{Chassis "wheel"
		("car_trace" fx("tracewheel05") step(0.07) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
	}
	{Chassis "airborne"
		("heli_model"
			speed(185)  ;//---------Max speed (at sea level), km/h.
			climb_speed(10) ;//-----Climb rate at sea level, in m/s
			turn(800) ;//-----------Turn-and-burn radius in meters, tightest sustained turn
			turnMP(400) ;//----------Turn-and-burn radius in meters, tightest sustained turn in Multiplayer
			aerodynamics(1.1) ;//---Aerodynamic efficiency rating (0-3)
			weight(5100) ;//--------Weight in kg.
			power(1680) ;//---------Horse Power.
			fuel(650) ;//-----------Fuel capacity in Liters.
			range(755) ;//----------Distance can travel with full fuel tank, in km.
			roll_rate(25) ;//-------Roll rate, in degrees per second.
			roll_angle(60) ;//------Maximum roll angle, in degrees.
		)
	}

	{Extension "uh-1b.mdl"}

	{bone "m134d"			;miniguns: right/left
		{speed 0.025}
		{limits -15 15}
	}
	{bone "m134d001"			;miniguns: right/left
		{speed 0.025}
		{limits -15 15}
	}
	{bone "foresight5"			;miniguns: right/left
		{speed 0.025}
		{limits -35 35}
	}
	{bone "foresight4"			;miniguns: right/left
		{speed 0.025}
		{limits -35 35}
	}
	{bone "mgun_rot_h"			;miniguns: right/left
		{speed 0.025}
		{limits -35 35}
	}
	{bone "mgun_rot_v"			;miniguns: down/up
		{speed 0.025}
		{limits -45 15}
	}
	{bone "gun_rot_h"			;rockets: right/left
		{speed 0.01}
		{limits -20 20}			;back to -10 10 as soon as they are able to rotate on their own
	}
	{bone "gun_rot_v"			;rockets: down/up
		{speed 0.01}
		{limits -35 15}
	}
}
