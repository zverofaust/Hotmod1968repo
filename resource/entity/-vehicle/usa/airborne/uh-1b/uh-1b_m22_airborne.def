{game_entity		;UH-1B/C with M22 subsystem
	(include "/properties/airborne.ext")
	{props "vision_lev02_air"}
	{PatherID "bf109"}
	(include "/properties/shadow/airborn.inc" scale(2.2))
	(include "/properties/selection/airborne.inc" scale(3.0))
	(include "/properties/car_crew.ext")
	{targetSelector "tank_heavy"}
	{targetSelector "helicopter_atgm"}

	("helicopter_tier1")
	
	;{extender "enumerator"}

	{boarder
		{anm "driver"
			{forward	{begin	"board_big-midcar_driver"} {end "seat_driver_car"} {base "doorleft"}}
			{reverse 	{end	"board_big-midcar_driver" -1} {base "doorleft" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_big-midcar"} {end "seat_driver_car"} {base "doorright"}}
			{reverse 	{end	"board_big-midcar" -1} {base "doorright" -1}}
		}
	}
	("crew_human" place(driver) bone(driver) door(emit1) animation(driver))
	("crew_human" place(commander) bone(commander) door(emit2) animation(commander))
	
	{placer
		{place "driver"		{group "crew"}}
		{place "commander"	{group "crew"}}
	}
	
	{Sensor
		{Visor "main"
			{bone	 "pivot_back"}
		}
	}
	
	;volume, component/tag, thickness
	{Volume "body"
		{tags "body"}
		{component "body"}
		{thickness 15}
	}
	{Volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 15}
	}
	{Volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 15}
	}
	{Volume "body3"
		{tags "body"}
		{component "body"}
		{thickness 15}
	}
	{Volume "body4"
		{tags "body"}
		{component "body"}
		{thickness 15}
	}

	{Weaponry
		{place "gun"
			{rotate}
			{weapon			"atgm_agm-22_x6" filled}
			{barrels		6}
			{gunner			"driver"}
			{charger		"driver"}
			{shooter		"shooter"}
			{foresight		"foresight1"}
			{basic}
		}
	}

	{mass 4309}
	
	{Chassis "wheel"
		("car_trace" fx("tracewheel05") step(0.07) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
	}
	{Chassis "airborne"
		("heli_model"
			speed(185)  ;//---------Max speed (at sea level), km/h.
			climb_speed(10) ;//-----Climb rate at sea level, in m/s
			turn(120) ;//-----------Turn-and-burn radius in meters, tightest sustained turn
			aerodynamics(1.2) ;//---Aerodynamic efficiency rating (0-3)
			weight(5100) ;//--------Weight in kg.
			power(1680) ;//---------Horse Power.
			fuel(650) ;//-----------Fuel capacity in Liters.
			range(755) ;//----------Distance can travel with full fuel tank, in km.
			roll_rate(50) ;//-------Roll rate, in degrees per second.
			roll_angle(60) ;//------Maximum roll angle, in degrees.
		)
	}

	{Extender "detail"
		{random 0}
	}

	{Extension "uh-1b_m22.mdl"}

	{bone "gun_rot_h"			;rockets: right/left
		{speed 0.01}
		{limits -20 20}			;back to -10 10 as soon as they are able to rotate on their own
	}
	{bone "gun_rot_v"			;rockets: down/up
		{speed 0.01}
		{limits -35 15}
	}
}
