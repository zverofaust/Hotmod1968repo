{game_entity		;UH-1B/C with M3 Subsystem
	(include "/properties/helicopter.ext")
	(include "/properties/shadow/airborn.inc" scale(2.5))
	(include "/properties/selection/airborne.inc" scale(2.00))
	(include "/properties/car_crew.ext")
	{props "td.uh-1h" "helicopter"}
	{PatherID "helicopter"}
	{targetSelector "helicopter"}

	("helicopter_tier1")
	
	{extender "enumerator"}

	{boarder
		{anm "driver"
			{forward	{begin	"board_big-midcar_driver"} {end "seat_driver_car"} {base "doorleft"}}
			{reverse 	{end	"board_big-midcar_driver" -1} {base "doorleft" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_big-midcar"} {end "seat_driver_car"} {base "doorright"}}
			{reverse 	{end	"board_big-midcar" -1} {base "doorright" -1}}
		}
		{anm "passenger1"
			{forward	{begin 	"board_body"}	{end "seat_passenger"} {base "doorleft1"}}
			{reverse 	{end	"emit_tank_1_hold"} {base "doorleft1"}}
		}
		{anm "passenger2"
			{forward	{begin 	"board_body"}	{end "seat_passenger"} {base "doorright1"}}
			{reverse 	{end	"emit_tank_1_hold"} {base "doorright1"}}
		}
	}
	("crew_human" place(driver) bone(driver) door(emit1) animation(driver))
	("crew_human" place(commander) bone(commander) door(emit2) animation(commander))
	("crew_human" place(seat1) bone(seat01) door(emit3) animation(passenger1))
	("crew_human" place(seat2) bone(seat02) door(emit4) animation(passenger2))
	("crew_human" place(seat3) bone(seat03) door(emit3) animation(passenger1))
	("crew_human" place(seat4) bone(seat04) door(emit4) animation(passenger2))
	
	{placer
		{place "driver"		{group "crew"}}
		{place "commander"	{group "crew"}}
		{place "seat1"		{group "passenger"}}
		{place "seat2"		{group "passenger"}}
		{place "seat3"		{group "passenger"}}
		{place "seat4"		{group "passenger"}}
	}
	
	{Sensor
		{Visor "main"
			{bone	 "pivot_back"}
		}
	}

	;volume/component, thickness
	("glass" args "window1")
	("glass" args "window2")
	("glass" args "window3")
	("glass" args "window4")
	("glass" args "window5")
	("glass" args "window6")
	("glass" args "window7")
	("glass" args "window8")
	("glass" args "window9")
	("glass" args "window10")
	("glass" args "window11")
	("glass" args "window12")
	("glass" args "window13")
	("glass" args "window14")
	("glass" args "window15")
	("glass" args "window16")
	
	;main body parts
	("body" args "body")
	("body" args "body1")
	("body" args "body2")
	("body" args "body3")
	("body" args "body4")

	;main rotor + blades
	("rotor" args "rotor")
	("rotor" args "propeller")
	("rotor" args "propeller1")

	;back rotor + blades
	("rotor_b" args "rotor_b")
	("rotor_b" args "propeller_b")
	("rotor_b" args "propeller_b1")
	
	;engines
	("engine" args "engine")

	{Obstacle "in_air"
        {Obb2
            {Center 10 0}
            {Extent 190 160}
            {Axis -1 0}
        }
        {rotate}
    }
    {ObstacleId "helicopter" "in_air"}
	
	{extender "inventory"
		{box
			{item "ammo 70mm_ffar" 46}
		}
	}
	
	{Weaponry
		{place "gun"
			{rotate}
			{weapon			"70mm_ffar_m3_x2" filled}
			{barrels		48}
			{gunner			"driver"}
			{charger		"driver"}
			{shooter		"shooter_a"}
			{foresight		"foresight2"}
			{basic}
		}
	}

	{mass 4309}
	
	{Chassis "helicopter"
		{Locomotion ("locomotion_transport")}
	}

	{Extender "detail"
		{random 0}
	}

	{Extension "uh-1b_ara.mdl"}

	{bone "gun_rot_h"			;rockets: right/left
		{speed 0.01}
		{limits -20 20}			;back to -10 10 as soon as they are able to rotate on their own
	}
	{bone "gun_rot_v"			;rockets: down/up
		{speed 0.01}
		{limits -35 15}
	}
}
