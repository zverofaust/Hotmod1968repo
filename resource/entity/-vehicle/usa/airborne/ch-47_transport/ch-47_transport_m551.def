{actor		;CH-47A
	(include "/properties/helicopter.ext")
	(include "/properties/shadow/airborn.inc" scale(2.2))
	(include "/properties/selection/airborne.inc" scale(2.00))
	(include "/properties/car_crew.ext")
	{props "helicopter" "insertion" "multi_board"} ;"wheeled" 
	{targetclass "helicopter"}
	{targetSelector "helicopter"}
	
	("helicopter_tier2")
	
	{PatherID "helicopter"}
	
	;volume, component/tag, thickness
	{Volume "body" {tags "body"} {thickness 10} {component "body"} }
	{Volume "body1" {tags "body"} {thickness 10} {component "body"} }
	{Volume "body2" {tags "body"} {thickness 10} {component "body"} }
	{Volume "body3" {tags "body"} {thickness 10} {component "body"} }
	{Volume "body4" {tags "body"} {thickness 10} {component "body"} }
	{Volume "body5" {tags "body"} {thickness 10} {component "body"} }
	{Volume "engine" {tags "engine"} {thickness 10} {component "engine"} }
	{Volume "engine1" {tags "engine"} {thickness 10} {component "engine"} }



	{Obstacle "in_air"
        {Obb2
            {Center 10 0}
            {Extent 190 160}
            {Axis -1 0}
        }
        {rotate}
    }
    {ObstacleId "helicopter" "in_air"}
	
	{boarder
		{anm "right"
			{forward	{begin	"board_plane_left"} {end "seat_passenger"} {base "doorright"}}
			{reverse	{end	"board_plane_left" -1} {base "doorright"}}
		}
		{anm "passenger"
			{forward	{begin	"board_dodge_bodyback"} {end "seat_passenger"} {base "doorback"}}
			{reverse	{end	"board_thor_driver" -1} {base "doorback"}}
		}
	}
	
	("crew_human"		place(driver)		bone(driver)		door(emit2) animation(right)	group(crew))
	("crew_human"		place(commander) 	bone(commander) 	door(emit2) animation(right)	group(crew))
	("crew_human"		place(gunner1)		bone(gunner1)		door(emit2) animation(right)	group(crew))
	("crew_human"		place(gunner2) 		bone(gunner2) 		door(emit2) animation(right)	group(crew))
	
	("crew_human"		place(seat01)	bone(seat01)	door(emit3) animation(passenger)	group(passenger))
	("crew_human"		place(seat02)	bone(seat02)	door(emit4) animation(passenger)	group(passenger))
	("crew_human"		place(seat03)	bone(seat03)	door(emit5) animation(passenger)	group(passenger))
	("crew_human"		place(seat04)	bone(seat04)	door(emit6) animation(passenger)	group(passenger))

	{Placer
		{place "gunner1"	{visor "mgun1"}}
		{place "gunner2"	{visor "mgun2"}}
		{place "attach"
			{Linkbone "attach"}
			{entity "m551"}
			{handlebone "basis"}
		}
	}

	{Sensor
		{Visor "mgun1"
			{vision "vehicle_top_mgun"}
			{bone	"visor3"}
		}
		{Visor "mgun2"
			{vision "vehicle_top_mgun"}
			{bone	"visor2"}
		}
	}
	
	{extender "inventory"
		{Box
			{item "ammo m60_box" 	4000}
		}
	}

	{Weaponry
		{place "dummy"
			{type			"dummy"}
			{rotate}
			{weapon			"dummy"}
			{gunner			"driver"}
			{charger		"driver"}
			{basic}
		}
		{place "mgun"
			{gunner			"gunner1"}
			{charger		"gunner1"}
			{LinkBone		"mgun2_link"}
			{LinkAnimation	"off"}
			{weapon			"m60d" filled}
			{basic}
			{ai_in_manual}
		}
		{place "mgun2"
			{gunner			"gunner2"}
			{charger		"gunner2"}
			{LinkBone		"mgun1_link"}
			{LinkAnimation	"off"}
			{weapon			"m60d" filled}
			{basic}
			{ai_in_manual}
		}
	}

	{mass 14970}
	{Chassis "wheel"
	}
	
	{Chassis "helicopter"
		{Locomotion ("locomotion_transport")}
	}

	;volume/component, thickness
	("glass" args "window1" 10)
	("glass" args "window2" 10)
	("glass" args "window3" 10)
	("glass" args "window4" 10)
	("glass" args "window5" 10)
	("glass" args "window6" 10)
	("glass" args "window7" 10)
	("glass" args "window8" 10)
	("glass" args "window9" 10)
	("glass" args "window10" 10)
	("glass" args "window11" 10)
	("glass" args "window12" 10)
	("glass" args "window13" 10)
	("glass" args "window14" 10)
	("glass" args "window15" 10)
	("glass" args "window16" 10)
	("glass" args "window17" 10)
	("glass" args "window18" 10)
	("glass" args "window19" 10)

	;main rotor + blades
	("part" args "rotor")
	("part" args "propeller")
	("part" args "propeller1")
	("part" args "propeller2")

	;back rotor + blades
	("part" args "rotor_b")
	("part" args "propeller_b")
	("part" args "propeller_b1")
	("part" args "propeller_b2")

	;wheels
	("wheel" args "wheell")
	("wheel" args "wheel2")
	("wheel" args "wheer1")
	("wheel" args "wheer2")

	{Extension "ch-47_transport.mdl"}
	{ObstacleId "helicopter"}
	
	{bone "mgun_rot_h_left"			;mgun left: right/left
		{speed 0.05}
		{limits -56 56}
	}
	{bone "mgun_rot_v_left"			;mgun left: up/down
		{speed 0.05}
		{limits -42.5 7.5}
	}
	{bone "mgun_rot_h_right"		;mgun right: right/left
		{speed 0.05}
		{limits -61 61}
	}
	{bone "mgun_rot_v_right"		;mgun right: up/down
		{speed 0.05}
		{limits -67.5 7.5}
	}
}
