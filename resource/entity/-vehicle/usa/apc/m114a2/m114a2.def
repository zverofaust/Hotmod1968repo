{game_entity
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.0))
	{props "light" "vision_lev03" "muzzle_20mm_25mm_auto" "shield" "shell_eject" "amphibia" "detect_tank_light" "radio_usa" "radio"}
	{extension "m114a2.mdl"}
	(include "m114a2.ext")
	{targetclass "tank_light"}
	{targetSelector "tank_zenite"}
	{PatherID "t37"}
	{collider "tank.light"}

	{extender "enumerator"
		{digit_folder "nato"}
	}

	;("crew_3_human_3")

	{placer
		{place "driver"		{visor "driver"}}
		{place "commander"	{visor "scout"}}
		;{place "gunner4"	{visor "mgun"}{sealable}}
	}
	
	{boarder
		{anm "left"
			{forward 	{begin "board_sd232_driver"}	{base "door_back"}}
			{reverse 	{end "board_sd232_driver" -1} {base "door_back"}}
		}
		{anm "right"
			{forward 	{begin "board_sd232_driver"}	{base "door_back"}}
			{reverse 	{end "board_sd232_driver" -1} {base "door_back"}}
		}
		{anm "gunner4"
			{forward 	{begin "board_ba-20m"} {end "seat_gunner_stand"} {base "door_back"}}
			{reverse	{end "board_ba-20m" -1} {base "door_back"}}
		}
		{anm "driver"
			{forward	{begin	"board_middlearmor"} {base "open_driver"}}
			{reverse	{end "emit_t34_hold"} {base "open_driver"}}
		}
	}
	
	("crew_inside")
	("crew_human" place(driver)		door(emit1) door2(emit2) visor(driver))
	("crew_human" place(commander)	door(emit1) door2(emit2) visor(scout))
	("crew_human" place(charger)	door(emit1) door2(emit2) visor(around))

	{sensor
		{visor "main"
			{vision "tank_commander"}
			{bone "turret"}
		}
		{visor "around"
			{vision "vehicle_scout"}
			{bone "turret"}
		}
		{Visor "driver"
			{vision "tank_driver"}
			{bone "body"}
		}
	}
	
	{extender "shield" {on}}

	{extender "inventory"
		;{weapon "mgun2" {mask "mountable"}}
		{box
			{item "bullet20_hs820 ap" 200}	; Only 400 rounds carried (including the 100 already in the gun)
			{item "bullet20_hs820 he" 100}
		;	{item "ammo m60_box" 2000}
			{item "m72_law weapon" filled}
			{item "m72_law weapon" filled}
			{item "m72_law weapon" filled}
		;	{item "m60" filled {user "mgun2"}}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "20mm_m139" filling "bullet20_hs820 ap" 100}
			{gunner "commander"}
			{charger "commander"}
			("abm_dymamic"
				zeroing(7.5)
				dispersion(0.01)
			)
		}
		;{place "mgun2"
		;	{gunner "gunner4"}
		;	{charger "gunner4"}
		;	{LinkBone		"mgun2_help"}
		;	{LinkAnimation	"off"}
		;	{basic}
		;	{ai_in_manual}
		;}
	}

	{mass 6800}
	{Chassis
		("tank_trace" fx("tracks_sm2") step(0.2) len(0.76))
		("mobility_tank"
			speed(58) ;----------Max speed when fully accelerated on road, km/h.
			reverse(10) ;--------Max speed in reverse on road, km/h.
			traverse(42) ;-------Track traverse, per second, in degrees.
			weight(6.8) ;-------Weight in Tonnes.
			power(160) ;---------Engine Power, in hp.
			track(4.5) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(235) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(443) ;---------Range in km, off-road.
		)
		{switch
			{exitFromWater}
			{terrain not "water" "deep_water"}
		}
	}
	{chassis "water"
		("chassis_defaults")
		{ignorePatherBounds}
		{waterline 1.4}
		{switch
			{terrain "water" "deep_water"}
		}
	}

	{bone "gun_rot"
		{limits -10 25}
		{speed2 25}
	}
	{bone "turret"
		{speed2 20}
	}
	;{bone "mgun_rot"
	;	{limits -10 25}
	;	{speed2 55}
	;}
	;{bone "mgun_rot_h"
	;	{limits -5 5}
	;	{speed2 75}
	;}
	;{bone "mgun_turret"
	;	{limits -35 65}
	;	{speed2 40}
	;}
}