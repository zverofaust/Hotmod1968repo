{game_entity
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc" scale(1.3))
	(include "/properties/selection/vehicle.inc" scale(1.2))
	{props "medium" "vision_lev04" "muzzle_85mm_93mm_sides" "diesel" "shell_eject" "shield" "open_top" "detect_td_medium"}
	(include "m36gmc.ext")
	{targetclass "tank_medium"}
	{targetSelector "tank_medium"}

	{extender "enumerator"
		{digit_folder "us2"}
	}

	("crew_4_human")
	{boarder
		{anm "left"
			{forward	{begin	"board_tank_right"} {end "pose_pak40_gunlayer"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_left"} {end "pose_pak40_gunlayer"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_lowArmor"} 	{end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_tank_2"}}
		}
		{anm "armor1"
			{forward	{begin	"board_lowArmor"} {end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_body"}}
		}
		{anm "armor2"
			{forward	{begin	"board_lowArmor"} {end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_body"}}
		}
		{anm "gunner"			
			{forward	{begin	"board_hummel"} {end "pose_pak40_gunlayer"}}
			{reverse 	{end	"emit_body" 1} {base "open_back_door" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_hummel"} {end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_body" 1} {base "open_back_door" -1}}
		}
		{anm "charger"
			{forward	{begin	"board_hummel"} {end "pose_pak40_charger"}}
			{reverse 	{end	"emit_body" 1} {base "open_back_door" -1}}
		}
	}
	
	{sensor
		{visor "around"
			{vision "vehicle_around"}		;// better vision than a in-closed turret 
		}
	}

	("crew_human" 		  place(driver)		door1(emit1) door2(emit2) visor(driver))
	("crew_human_visible" place(commander) 	door1(emit1) door2(emit2) visor(around))
	("crew_human_visible" place(gunner)		door1(emit1) door2(emit2) visor(main))
	("crew_human_visible" place(charger)	door1(emit1) door2(emit2) visor(main))

	{placer 
		{place "commander" {openForCrush 0}}
		{place "gunner" {openForCrush 0}}
	}
	
	
	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor1))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor1))	

	{extender "inventory"
		{box
			{item "ammo bullet90_m41 apbc" 35}
			{item "ammo bullet90_m41 apcr" 20}
			{item "ammo bullet90_m41 he" 27}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "90mm_m3" filling "ammo bullet90_m41 apbc" 1}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic_td"
				zeroing(2.5)
				dispersion(0.25)
			)
		}
	}
	
	{mass 29100}
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.53) len(0.32))
		("mobility_tank"
			speed(42) ;----------Max speed when fully accelerated on road, km/h.
			reverse(9) ;---------Max speed in reverse on road, km/h.
			traverse(30) ;-------Track traverse, per second, in degrees.
			weight(29.0) ;-------Weight in Tonnes.
			power(450) ;---------Engine Power, in hp. //engine under normal use was rated 265hp at 2600 rpm
			track(4.5) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(560) ;----------Fuel capacity in Litres.
			type(diesel) ;---------Fuel type. (diesel OR fuel)
			range(240) ;---------Range in km, off-road.
		)
	}
	{Extension "m36.mdl"}

	{bone "turret"
		{speed2 5}
	}

	{bone "gun_rot"
		{speed2 5}
	}
}
