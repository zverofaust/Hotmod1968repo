{game_entity
	(include "/properties/cannon_mgun.ext")
	(include "/properties/shadow/tank.inc"  scale(0.6))
	{props "-mg_stan" "with_gun" "mortar" "vision_lev01_can" "detect_artillery_small" "cannon_sandbag_standard"}
	(mod not "mp" {able "emit_on_attack"})
	{targetclass "howitzer"}
	{targetSelector "cannon_howitzer"}

	{sensor
		{visor "main"
			{vision "cannon_mortar"}
			{bone "visor"}
		}
	}

	{placer
		{place "gunner" {visor "main"}}
	}

	{boarder
		{anm "gunner"
			{forward {end "pose_mortar_120sgrw42_gunner" 10}}
		}
		{anm "commander"
			{forward {end "pose_mortar_120sgrw42_commander" 10}}
		}
		{anm "driver1"
			{forward {end "mortar_driver_r" 10}}
		}
		{anm "driver2"
			{forward {end "mortar_driver_l" 10}}
		}
	}

	{extender "inventory"
		{box
			{item "ammo mortarusa_107 he" 10}
			{item "ammo mortarusa_107 sm" 5}
			{item "sandbag_vehicle" 2}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{weapon "weapon 107mm_m30" filling "ammo mortarusa_107 he" 1}
			{RestoreIKAfterAim}
			{gunner "gunner"}
			{charger "commander"}
			{basic}
			("abm_dymamic_mortar"
				zeroing(3.0)	; // time it takes to aim until the reticle shrinks. Bigger values, more control.
				dispersion(1)   ; // time it takes to distort the reticle when you move the gun (how abrupt it loses zeroing). Bigger values, more control.
			)
		}
	}
	
	{extender "cannon"
		{animation
			{switch "close"}
			;// "gunner" "commander"
			{move "mortar_driver_r" "mortar_driver_l"}
			{aim "mortar_120sgrw42_gunner_aim" "mortar_120sgrw42_commander_aim"}
			{fire "mortar_120sgrw42_gunner_fire" "mortar_120sgrw42_commander_fire"}
			{reload "" "mortar_120sgrw42_commander_reload"}
		}
		{move {workers "driver1" "driver2" minWorkers 2} {obstacle "close"}}
		{attack {obstacle "open"}}
	}
	
	{mass 305}
	{Chassis
		("mobility_cannon"
			speed(6) ;----------------------------------Max speed.
			weight(300) ;---------------------------------Weight in Kilograms.
		)
	}
	
	{Extension "m30g_mortar.mdl"}
	
	{bone "basis"
		{speed2 8}
	}
	{bone "turret"
		{limits -10 10}
		{speed2 12}
	}
	{bone "foresight"
		{limits -25 20}
		{speed2 10}
	}
}