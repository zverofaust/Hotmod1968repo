{game_entity
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc" scale(1.2))
	(include "/properties/selection/vehicle.inc" scale(1.2))
	{props "medium" "vision_lev05" "muzzle_85mm_93mm_sides" "diesel" "smoke" "8shot"}
	{Extension "m47g.mdl"}
	(include "m47g.ext")
	{targetclass "tank_medium"}
	{targetSelector "tank_medium"}
	{PatherId "t34"}

	{extender "enumerator"}

	("crew_5_human")

	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor1))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor1))
	{boarder
		{anm "left"
			{forward	{begin	"board_Kv"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_right"} {end "pose_mgun_pz6"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_HighArmor"} 	{end "seat_armor"}}
			{reverse 	{end	"emit_tank_2"}}
		}
		{anm "armor1"
			{forward	{begin	"board_HighArmor"} {end "seat_armor"}}
			{reverse 	{end	"emit_body"}}
		}
	}

	{placer
		{place "commander"
			{group "crew"}
			{linkbone "gunner2"}
			{turnoff {sensor} {shadow}}
			{visor "top"}
			{sealable}
		}
		{place "gunner3"
			{visor "hullmg"}
		}
	}
	{sensor
		{visor "top"
			{vision "human"}
			{bone "mgun_rot"}
		}
		{visor "hullmg"
			{bone "foresight4"}
			{vision "tank_driver"}
		}
	}
	{boarder
		{door "emit1"}
		{door "emit2"}
		{link "emit1" "gunner2" {anm "left"} {forward putoff} {reverse puton}}
		{link "emit2" "gunner2" {anm "right"} {forward putoff} {reverse puton}}
	}

	{extender "smokescreen"
		{cooldown 20}
		{itemTags "grenade nbk39"}
	}
	
	{extender "inventory"
		{box
			{item "ammo bullet90_m41 apcbche" 20} ;71 total
			{item "ammo bullet90_m41 heat" 18}
			{item "ammo bullet90_m41 he" 31}
			{item "ammo bullet90_m41 sm" 4}
			{item "ammo hmgun_usa" 1200}
			{item "ammo mgun_usa belt" 2000}
			{item "nbk39 grenade" 1}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon			"90mm_m36" filling "ammo bullet90_m41 apcbche" 1}
			{gunner "gunner"}
			{charger "charger"}
			("hm68_abm_nostab_range")
		}
		{place "mgun"		;aa
			{weapon 		"browning_m2" filled}
			{gunner 		"commander"}
			{charger 		"commander"}
			{LinkBone		"mgun_help"}
			{LinkAnimation	"off"}
			("abm_mgun")
			{basic}
			{ai_in_manual}
		}
		{place "mgun1"
			{type "hull"}
			{weapon "browning_m19a4" filled}
			{foresight "foresight4"}
			{gunner "gunner3"}
			{charger "gunner3"}
			("abm_mgun")
			{basic}
		}
		{place "mgun2"
			{type "coaxial"}
			{weapon "browning_m19a4" filled}
			{foresight "foresight5"}
			("abm_mgun")
			{basic}
		}
	}
	

	{mass 41600}
	{Chassis
		("tank_trace" fx("tracks_big") step(0.52) len(-0.56))
		("mobility_tank"
			speed(48) ;----------Max speed when fully accelerated on road, km/h.
			reverse(15) ;---------Max speed in reverse on road, km/h.
			traverse(25) ;-------Track traverse, per second, in degrees.
			weight(41.6) ;-------Weight in Tonnes.
			power(500) ;---------Engine Power, in hp.
			track(4.0) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(520) ;----------Fuel capacity in Litres.
			type(diesel) ;-------Fuel type. (diesel OR fuel)
			range(160) ;---------Range in km, off-road.
		)
	}

	{bone "gun_rot"
		{limits -10 25}
		{speed2 12}
	}
	{bone "turret"
		{speed2 18}
	}
	{bone "turret_mgun"
		{limits -10 30}
		{speed2 24}
	}
	{bone "hull_mgun_turret"
		{limits -20 20}
		{speed2 18}
		{terminator}
	}
	{bone "hull_mgun"
		{limits -6 20}
		{speed2 18}
	}
}
