<?xml version="1.0" encoding="UTF-8" ?>
<Layout xmlns="http://www.digitalmindsoft.eu/xmllayout"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.digitalmindsoft.eu/xmllayout ../../../LayoutSchema.xsd"
        version="1" skin="main_menu_dark_skin">
    <Content>
        <BackgroundPanel backgroundResource="/interface/scene/unit_icon/stub" sizeMode="fromResource">
            <Alphabuffer value="true" />
            <Enable value="false"/>
            <Children>
                <StackPanel id="unit_button_placeholder">
                    <Ables mouse="false" keyboard="false"/>
                </StackPanel>
                <FlowPanel direction="vertical" halign="center" valign="center">
                    <Children>
                        <StaticText id="unit_level">
                            <Text value="level 11"/>
                            <TextClip value="true"/>
                        </StaticText>
                    </Children>
                </FlowPanel>
                <FlowPanel direction="vertical" halign="center" valign="center">
                    <Children>
                        <StaticText id="unit_time">
                            <Visible value="false"/>
                            <Text value="4:00"/>
                            <TextClip value="true"/>
                        </StaticText>
                    </Children>
                </FlowPanel>
                <FlowPanel direction="vertical" halign="left">
                    <Insets top="3" left="3" right="0"/>
                    <Children>
                        <StaticText id="unit_desc">
                            <Text value="name" textFormat="x-" />
							<TextClip value="true"/>
                        </StaticText>

                    </Children>
                </FlowPanel>
                <FlowPanel direction="vertical" halign="right" valign="bottom">
                    <Insets bottom="-3" left="6" right="6"/>
                    <Children>
                        <StaticText id="unit_budget">
                            <Text value="450 MP / 17.5 CP" textFormat="f(arial_hq)s(8)"/>
                            <TextClip value="true"/>
                        </StaticText>
                    </Children>
                </FlowPanel>
                <FlowPanel direction="vertical" halign="left" valign="center">
                    <Insets bottom="-19" left="7"/>
                    <Children>
						<StaticText id="limits"/>
                    </Children>
                </FlowPanel>
				<FlowPanel direction="vertical" halign="right" valign="top">
					<Children>
						<PictureButton id="info_button">
							<Resource value="/interface/pages/multi/btn_unit_info"/>
						</PictureButton>
					</Children>
				</FlowPanel>
            </Children>
        </BackgroundPanel>
    </Content>
</Layout>